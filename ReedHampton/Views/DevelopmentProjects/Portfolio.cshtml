@model IEnumerable<ReedHampton.Models.DevelopmentProject>

@{
    ViewBag.Title = "Index";
}

    <style>
        body {
            background-color: #f5eee1;
        }

        hr {
            border-top: 0.5px solid #660000;
        }

        .bubble {
            width: 100px;
            height: 50px;
            border-radius: 50%;
            background: #f5eee1;
            -moz-transition-property: -moz-transform;
            -moz-transition-duration: 1s;
            text-align: center;
            overflow: hidden;
        }

        #darken {
            background-image: linear-gradient( rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0.35) ), url(../../StaticImages/TerminalHelloWorld.jpg);
        }

        #f1_container {
            overflow: hidden;
            object-fit:contain;
            float: left;
            text-align: left;
            width:1100px;
            height:300px;
            border-radius:25px; 
            margin: 0.4em;
            padding-left: 0px;
            z-index: 1;
            perspective: 0px;
        }

        #f1_card {
            width: 100%;
            height: 100%;
            transform-style: preserve-3d;
            transition: all 0.8s linear;
        }

        #f1_container:hover #f1_card {
            transform: rotateY(180deg);
            box-shadow: -5px 5px 5px #aaa;
            border-radius: 25px;
        }

        .face {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            background-color: #660000;
            display: block;
            background-image: linear-gradient( rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0.35) ), url(../../StaticImages/DiagonalBlue.jpg);
            object-fit: cover;
        }

            .face.back {
                display: block;
                transform: rotateY(180deg);
                box-sizing: border-box;
                padding: 10px;
                color: white;
                text-align: center;
                background-color: #660000;
                background-image: linear-gradient( rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0.35) ), url(../../StaticImages/DiagonalBlue.jpg);
                object-fit:cover;
                position:relative;
            }
    </style>

<body>

    <div class="jumbotron" id="darken" style="background-size:cover; margin-top:60px;">
        <h1 style="text-align:center; font-family:Garamond; font-size:60px; padding-top:25px; padding-bottom:25px; color:white;">Project Portfolio</h1>
    </div>

    <hr />

        @{
            if (User.Identity.IsAuthenticated)
            {
                <input type="button" class="btn btn-success" value="Add Project" onclick="window.location = 'Create';" />
            }
        }

        <br />
        <br />

        <!-------------------------------------------------------C# CREATE NEW HTML STRINGS------------------------------------------------------------------------------------------------->

        @{
            string img_path = "";
            string end_link_tag = "</a>";

            string imagePath = "";
            string htmlImageText = "";

            int[] project_ids = new int[100];
            string[] project_GitHubURLS = new string[100];
            string[] project_WebsiteURLS = new string[100];
            string[] gitHub_Check = new string[100];
            string[] project_ShortNames = new string[100];
            string[] project_shortDescriptions = new string[100];
            string[] project_LongNames = new string[100];
            string[] project_Dates = new string[100];
            string[] project_LongDescriptions = new string[100];
            string[] project_Skill = new string[100];
            string[] ImageBoxHTML = new string[100];
            int count = 0;

            foreach (var i in Model)
            {
                img_path = i.ProjectImageUrl;

                if (img_path != null)
                {
                    img_path = img_path.Remove(0, 2);

                    imagePath = @Request.ApplicationPath + img_path;
                    htmlImageText = "<img src=\"" + imagePath + "\" style=\"width:500px; height:300px; padding-top:25px; padding-bottom:25px; padding-left:50px; object-fit:cover; overflow: hidden;\" class=\"hover-shadow cursor\")>";

                    project_ids[count] = i.id;
                    project_GitHubURLS[count] = "<a href=\"" + i.GitHubUrl + "\" target=\"_blank\">";
                    project_WebsiteURLS[count] = "<a href=\"" + i.ProjectUrl + "\" target=\"_blank\">";
                    gitHub_Check[count] = i.GitHubUrl;
                    project_ShortNames[count] = i.ShortName;
                    project_shortDescriptions[count] = i.ShortDescription;
                    project_LongNames[count] = i.LongName;
                    project_Dates[count] = i.Date;
                    project_LongDescriptions[count] = i.LongDescription;
                    project_Skill[count] = i.SkillsNeeded;
                    ImageBoxHTML[count] = htmlImageText;

                    count++;
                }
            }
        }

        <!-------------------------------------------------------THUMBNAILS------------------------------------------------------------------------------------------------->


        @for (int i = 0; i < count; ++i)
        {
            <div class="row" style="padding-top:20px; padding-bottom:40px;">
                <div id="f1_container">

                    <div id="f1_card">

                        <div class="front face">
                            @(new HtmlString(ImageBoxHTML[i]))

                            <div style="position:absolute; top:15px; left:575px; max-width:450px">
                                <h1 style="font-family:Garamond; font-size:50px; color:#f5eee1;">@project_ShortNames[i]</h1>
                                <h3 style="font-family:Garamond; font-size:24px; color:#f5eee1;">@project_shortDescriptions[i]</h3>
                            </div>
                        </div>

                        <div class="back face center">

                            <h4 style="font-size:24px; font-style:oblique; font-family: 'Century Gothic'; color:#f5eee1;">@project_LongNames[i]</h4>
                            <h5 style="font-size:20px; font-style:oblique; font-family: 'Century Gothic'; color:#f5eee1;">@project_Dates[i]</h5>
                            <p style="padding-top:20px; font-size:18px; font-family: 'Century Gothic'; color:#f5eee1;">@project_LongDescriptions[i]</p>

                            @if (gitHub_Check[i] != null)
                            {
                                @(new HtmlString(project_GitHubURLS[i]))
                                    <img style="position:absolute; left:15px; bottom:25px;" src="~/StaticImages/GitHub-Mark-64px.png" />
                                @(new HtmlString(end_link_tag))

                                @(new HtmlString(project_WebsiteURLS[i]))
                                    <img style="position:absolute; left:100px; bottom:25px;" src="~/StaticImages/WebsiteURL.png" />
                                @(new HtmlString(end_link_tag))
                            }

                            <!--
                            <div class="bubble">
                                    <p style="color:#660000; padding-top:15px;">project_Skill[i] </p>
                            </div>
                            -->

                        </div>

                    </div>
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="row">
                        <input type="button" class="btn btn-success" style="margin-top:20px;" value="Edit" onclick="location.href='@Url.Action("Edit", "DevelopmentProjects", new { id = project_ids[i] })'" />
                        <input type="button" class="btn btn-danger" style="margin-top:15px;" value="Delete" onclick="location.href='@Url.Action("Delete", "DevelopmentProjects", new { id = project_ids[i] })'" />
                    </div>
                }

            </div>
        }

</body>